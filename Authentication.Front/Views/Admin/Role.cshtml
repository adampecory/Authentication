@model IEnumerable<Authentication.Model.Role>
@{
    ViewBag.Title = "Manager les Roles";
}

<h2>Liste des roles</h2>

<div class="row">

    @Html.ActionLink("Nouveau Role","CreateRole")
        
    <table class="table table-striped">
        <caption>Liste des roles</caption>
        <tr>
            <th>Nom</th>
            <th>Modifier</th>
            <th>Supprimer</th>
        </tr>
        @if (Model!=null)
        {
            foreach(var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td><a href="@Url.Action("EditRole", new { @Id=item.Id })"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a></td>
                    <td><a href="@Url.Action("DeleteRole", new { @Id = item.Id })"><span class="glyphicon glyphicon-remove" aria-hidden="true"></span></a></td>
                </tr>
            }              
        }
          
    </table>

</div>

